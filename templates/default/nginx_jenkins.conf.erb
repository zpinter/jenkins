# nginx jenkins application vhost
#
# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.
#
<% if @www_redirect -%>
server {
<% @listen_ports.each do |port| -%>
  listen            <%= port %>;
<% end -%>
  server_name     www.<%= @host_name %>;
  rewrite ^/(.*)  http://<%= @host_name %>/$1 permanent;
}
<% end -%>

<% if @redirect_http -%>
server {
<% @listen_ports.each do |port| -%>
  listen            <%= port %>;
<% end -%>
  server_name <%= @host_name %><% @host_aliases.each do |a| %><%= " #{a}" %> <% end %>;
  rewrite     ^(.*) https://$host$1 permanent;
}
<% end -%>

server {
<% if @ssl_enabled -%>
  <% @ssl_listen_ports.each do |port| -%>
  listen            <%= port %>;
  <% end -%>
<% else -%>
  <% @listen_ports.each do |port| -%>
  listen            <%= port %>;
  <% end -%>
<% end -%>
  server_name       <%= @host_name %><% @host_aliases.each do |a| %><%= " #{a}" %> <% end %>;

  client_max_body_size <%= @max_upload_size %>;

<% if @ssl_enabled -%>
  ssl on;
  ssl_certificate     <%= node[:jenkins][:http_proxy][:ssl][:cert_path] %>;
  ssl_certificate_key <%= node[:jenkins][:http_proxy][:ssl][:key_path] %>;

  ssl_ciphers               RC4:HIGH:!kEDH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;

  ssl_session_cache   shared:SSL:10m;
  ssl_session_timeout 10m;
<% end -%>

  location / {

    <% if @redirect_http_forwarded -%>
      if ($http_x_forwarded_proto = "http") {
        rewrite     ^(.*) https://$host$1 permanent;
      }
    <% end -%>

    proxy_pass http://127.0.0.1:<%= node[:jenkins][:server][:port] %>;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    <% if @redirect_http_forwarded -%>
    proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
    proxy_redirect http:// https://;
    <% else -%>
    proxy_set_header X-Forwarded-Proto $scheme;
    <% end -%>
    proxy_set_header Host $http_host;
    <% if @ssl_enabled %>
    proxy_redirect http:// https://;
    <% end %>

<% case node['jenkins']['http_proxy']['server_auth_method'] -%>
<% when 'basic' -%>
    auth_basic            "Restricted";
    auth_basic_user_file  htpasswd;
<% end -%>
  }

  error_log         <%= node[:nginx][:log_dir] %>/jenkins-error.log;
  access_log        <%= node[:nginx][:log_dir] %>/jenkins-access.log;
}
